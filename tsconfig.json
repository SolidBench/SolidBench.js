{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2021",
      "dom"
    ],
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts"
  ]
}
